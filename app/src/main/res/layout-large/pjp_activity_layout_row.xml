<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:id="@+id/cv">

    <RelativeLayout
        android:id="@+id/relMainPjp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/relPjp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvwPjpStoreName"
                android:layout_marginBottom="4dp"
                android:text="Sample"
                style="@style/title_style"
                android:layout_alignParentTop="true"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvwPjpDetails"
                android:text="Sample details"
                android:layout_marginStart="20dp"
                android:textColor="@color/secondary_text"
                android:layout_below="@+id/tvwPjpStoreName"
                android:padding="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvwPjpSubDetails"
                android:text="Sample details"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/secondary_text"
                android:layout_below="@+id/tvwPjpDetails"
                android:padding="6dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/cardDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividers"
            android:layout_below="@id/relPjp"/>

        <Button
            android:id="@+id/btnCheckInPjp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHECK IN"
            android:textColor="@color/colorAccentDark"
            android:layout_alignParentEnd="true"
            android:onClick="onClickCheckIn"
            android:layout_below="@+id/relPjp" />

        <Button
            android:id="@+id/btnPreviewPjp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREVIEW"
            android:textColor="@color/colorAccentDark"
            android:layout_toStartOf="@id/btnCheckInPjp"
            android:layout_below="@+id/relPjp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>