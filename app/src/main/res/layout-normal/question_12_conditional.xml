<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/style_question_row"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvwCondprompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            style="@style/TextViewPrimary_medium"
            android:text="CONDITIONAL"/>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rbgConditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:divider="#ffd6d6d6">

    </RadioGroup>

    <TableLayout
        android:id="@+id/tblFormsPerCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:showDividers="middle"
        android:orientation="vertical"
        android:background="@color/white"
        android:divider="#ffd6d6d6"
        android:layout_marginBottom="10dp"
        android:dividerHeight="5dp">

    </TableLayout>

    <LinearLayout
        android:id="@+id/lnrCondlines"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccentDark">

    </LinearLayout>

</LinearLayout>