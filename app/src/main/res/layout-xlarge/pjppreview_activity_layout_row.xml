<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvwPjpDatetime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="06/24/2016 18:00"/>

        <TextView
            android:id="@+id/tvwPjpUsername"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:text="LLOYD KEVIN HEYROSA"/>

        <TextView
            android:id="@+id/tvwPjpLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:text="PALANAN MAKATI CITY"/>

        <TextView
            android:id="@+id/tvwPjpStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:text="5"/>

    </LinearLayout>
</LinearLayout>