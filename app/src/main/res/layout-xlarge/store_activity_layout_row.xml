<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal"
    android:background="@drawable/style_listview_design">

    <LinearLayout
        android:id="@+id/lnrMainStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnrStore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvwStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="STORE 1"
                style="@style/title_style"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvwTemplatename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/primary_text"
                android:text="PG ANABU"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvwTemplateDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/primary_text"
                android:text="TEMPLATE DATE"
                android:layout_marginBottom="8dp"
                android:textSize="15sp" />

