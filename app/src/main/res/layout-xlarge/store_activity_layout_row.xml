                <!--android:textStyle="italic"-->
                <!--android:fontFamily="sans-serif-light"-->
                <!--android:textColor="@color/primary_text"-->
                <!--android:text="TERRIROTRY"-->
                <!--android:textSize="15sp" />-->

            <TextView
                android:id="@+id/tvwPostingDatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Posted: 01/14/2016 13:34"
                android:textStyle="italic|bold"
                android:textSize="15sp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnPreview"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            style="@style/button_design"
            android:text="PREVIEW"
            android:layout_gravity="center"
            android:background="@drawable/btn_accent"
            android:onClick="previewOnClickEvent"/>

        <Button
            android:id="@+id/btnAudit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            style="@style/button_design"
            android:text="AUDIT"
            android:layout_gravity="center"
            android:background="@drawable/btn_primary"
            android:onClick="auditOnClickEvent"/>

