<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="@color/colorAccentLight" />
            <stroke
                android:width="1dp"
                android:color="@color/colorAccentLight" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorAccentLight" />
            <stroke
                android:width="1dp"
                android:color="@color/colorAccentLight" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorAccentDark"
                android:endColor="@color/colorAccentDark"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorAccentDark" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>